<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFCC00" /> <!-- Bright color when pressed -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FF9900" /> <!-- Outline when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFEE58" /> <!-- Default bright color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFB300" /> <!-- Default outline -->
        </shape>
    </item>
</selector>
